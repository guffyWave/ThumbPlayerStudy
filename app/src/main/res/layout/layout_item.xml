<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.gufran.thumbplayer.ThumbPlayerView
        android:id="@+id/thumbPlayerView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:icon_error="@mipmap/ic_launcher"
        app:icon_play="@drawable/play"
        app:icon_stop="@drawable/stop"
        app:playerDisabledColor="@android:color/darker_gray"
        app:playerPrimaryColor="#ff0000"
        app:progress="0"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp" />

</LinearLayout>
